.page-search
	position relative
	background main-dark

	&__header
		padding-top 20px
		padding-bottom 25px

		+below(size-medium)
			padding-y(10px)

		.grid
			display table
			width 100%

			> div
				display table-cell
				float none
				vertical-align middle

	&__title
		color light
		font-size 40px
		line-height 1.3

		+below(size-medium)
			font-size 25px
			line-height 1.1

	&__title-special
		white-space nowrap

	&__btn-wrap
		padding-top 10px
		padding-right 15px
		text-align left

		+below(size-medium)
			padding-top 0

	&__btn
		display inline-block
		width 124px
		font-size 18px
		line-height 36px
		text-align center
		text-decoration none

		&:hover,
		&:focus
			opacity-light()

		&_open
			color #b9b9b9
			background #363636

		&_close
			display none
			color main-dark
			background light

	&__search-wrap
		display none
		position absolute
		top 100%
		left 0
		width 100%
		z-index 1000
