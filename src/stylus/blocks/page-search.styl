.page-search
	position relative
	background main-dark

	&__header
		padding-top 20px
		padding-bottom 25px

		+below(size-tablet)
			padding-y(15px)

	&__title
		color light
		font-size 40px
		line-height 1.3

		+below(size-tablet)
			font-size 25px

	&__btn-wrap
		padding-top 10px
		text-align left

		+below(size-tablet)
			padding-top 0

		+below(size-smallest)
			padding-top 10px
			text-align right

	&__btn
		display inline-block
		width 124px
		font-size 18px
		line-height 36px
		text-align center
		text-decoration none

		&:hover,
		&:focus
			opacity-light()

		&_open
			color #b9b9b9
			background #363636

		&_close
			display none
			color main-dark
			background light

	&__search-wrap
		display none
		position absolute
		top 100%
		left 0
		width 100%
		z-index 1000
