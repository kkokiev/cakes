.header
	padding-y(30px)

	+below(size-medium)
		padding-y(20px)

	+below(size-tablet)
		padding-y(10px)

	&__mobile-wrap
		>.grid

			+below(size-medium)
				display table
				width 100%

			> div

				+below(size-medium)
					display table-cell
					float none
					vertical-align middle

	&__desktop-wrap
		> .grid
			display table
			width 100%

			+below(size-medium)
				display block

			> div
				display table-cell
				float none
				vertical-align middle

				+below(size-medium)
					display block

					&:last-child
						display none


