.popup-slider
	tabindex -1
	height 0
	text-align center
	overflow hidden
	cursor pointer

	&_opened
		position fixed
		top 0
		bottom 0
		left 0
		right 0
		height auto
		padding 15px
		background rgba(0,0,0, .7)
		z-index 2000
		overflow-y auto

	&__wrap
		display block
		width 100%
		max-width 980px
		margin-x(auto)
		overflow hidden
		text-align center

	&__close-btn
		text-align left
		margin-bottom 5px

	&__img-wrap
		display inline-block

		img
			display none
			max-height 80vh
			width auto
			max-width 100%
			margin-x(auto)
			cursor default




