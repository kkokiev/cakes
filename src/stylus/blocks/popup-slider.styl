.popup-slider
	tabindex -1
	height 0
	text-align center
	overflow hidden

	&_opened
		position fixed
		top 0
		bottom 0
		left 0
		right 0
		height auto
		padding 15px
		background rgba(0,0,0, .7)
		z-index 2000
		overflow-y auto

	&__wrap
		display block
		width 100%
		max-width 980px
		margin-x(auto)
		overflow hidden

	&__close-btn
		margin-bottom 5px

	&__img-wrap

		img
			display none
			height 80vh
			width auto
			margin-x(auto)




