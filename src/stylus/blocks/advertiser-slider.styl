.advertiser-slider

	&__slider
		position relative

	&__wrap
		position relative
		padding-x(55px)

	.swiper-container
		width 100%

	.swiper-slide
		cursor pointer

		img
			display block
			height 175px
			max-width 135px
			width 100%
			margin-x(auto)


	//controls styles


.swiper-btn
	position absolute
	top 0
	height 175px
	width 50px
	background #bcbcbc
	cursor pointer

.swiper-btn-prev
	right 0

.swiper-btn-next
	left 0

