.advertiser-info

	&__review-block
		padding-left 15px
		border-left 1px solid border

		+below(900px)
			padding-left 0
			margin-bottom 20px
			border-left none

	&__header
		padding-top 10px
		padding-bottom 20px

		+below(size-tablet)
			padding-top 0
			padding-bottom 10px

	&__row
		margin-bottom 20px

		&:last-child
			margin-bottom 0

	&__review
		padding-bottom 15px
		margin-bottom 15px
		border-bottom 1px solid border

		+below(size-tablet)
			padding-bottom 10px
			margin-bottom 10px


		&:last-child
			border-bottom none
			margin-bottom 0
			padding-bottom 0

	&__review-btn
		display inline-block
		padding-x(20px)
		color light
		line-height 30px
		single-line()
		text-decoration none
		background bg-dark

		&:hover,
		&:focus
			background #000

	&__contact-block
		padding-right 20px

		+below(900px)
			padding-right 0

	&__contact-info
		padding-left 20px

		+below(600px)
			padding-left 0
			margin-bottom 20px
