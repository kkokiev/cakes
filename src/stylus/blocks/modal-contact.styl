.modal-contact
	display none
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	background rgba(255, 255, 255, .5)
	overflow-y auto
	overflow-x hidden


	&__body
		width 930px
		max-width 90%
		margin 60px auto
		background #6b6b6b

		+below(size-tablet)
			margin-y(30px)

	&__close-btn-wrap
		text-align left

	&__content
		padding-x(70px)
		padding-bottom 70px
		color light
		text-align right

		+below(size-tablet)
			padding-x(20px)
			padding-bottom 20px

	&__header
		padding-top 25px
		padding-bottom 10px

		+below(size-tablet)
			padding-y(10px)

	&__header-row
		margin-bottom 20px

		&:last-child
			margin-bottom 0

